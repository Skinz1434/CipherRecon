{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "no-console": "warn",
    "no-unused-vars": "warn",
    "semi": ["error", "always"],
    "no-trailing-spaces": "error",
    "quotes": ["error", "single"],
    "comma-dangle": ["error", "es5"],
    "no-var": "error",
    "prefer-const": "error"
  },
  "overrides": [
    {
      "files": ["src/cli/**/*.js", "src/api/**/*.js"],
      "env": {
        "node": true,
        "browser": false
      },
      "globals": {
        "require": "readonly",
        "module": "readonly",
        "exports": "readonly",
        "__dirname": "readonly",
        "__filename": "readonly",
        "process": "readonly",
        "Buffer": "readonly",
        "global": "readonly"
      }
    },
    {
      "files": ["src/web/**/*.js"],
      "env": {
        "browser": true,
        "node": false
      },
      "globals": {
        "window": "readonly",
        "document": "readonly",
        "navigator": "readonly",
        "console": "readonly"
      }
    },
    {
      "files": ["src/shared/**/*.js"],
      "env": {
        "browser": true,
        "node": true
      },
      "globals": {
        "define": "readonly",
        "module": "readonly",
        "exports": "readonly",
        "require": "readonly",
        "self": "readonly",
        "window": "readonly",
        "global": "readonly",
        "Buffer": "readonly",
        "Intl": "readonly"
      }
    }
  ]
}
